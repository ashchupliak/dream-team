{
  "alwaysThinkingEnabled": true,
  "model": "opus",
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(*)",
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "WebFetch(*)",
      "WebSearch(*)",
      "Task(*)",
      "mcp__github__*"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Read(**/*secret*)",
      "Write(**/*secret*)",
      "Edit(**/*secret*)"
    ]
  },
  "commitMessagePolicy": {
    "neverMentionAssistant": true,
    "neverMentionClaude": true,
    "includeCoAuthoredBy": false
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸš€ Dream Team v2.0 Ready | 8 agents | Opus+Sonnet+Haiku'",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] Modified: $FILE_PATH\" >> .claude/changes.log 2>/dev/null || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$FILE_PATH\" | grep -qE '\\.env|\\.secret|credentials'; then echo 'BLOCK: Sensitive file' && exit 1; fi",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âš ï¸ Context compacting. State preserved in .claude/team-state.md' && cat .claude/team-state.md 2>/dev/null || echo 'No active task'",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Session ended: $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/sessions.log 2>/dev/null || true",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
